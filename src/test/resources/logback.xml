<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/test/java/utils/logs/frameWorkLogs.txt</file> <!-- Replace with your desired file path -->
        <encoder>
            <pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="FILE"/>
    </root>
</configuration>
